<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">

	<!-- CREACIÓN DE LA DEPENDENCIA MEDIANTE CONSTRUCTOR-->
	<bean id="injectReport" class="es.spring.ioc.l06_09.Informe" />

	<bean id="jefeEmp" class="es.spring.ioc.l06_09.JefeEmpleado">
		<constructor-arg ref="injectReport"></constructor-arg>
	</bean>
	<bean id="dirEmp" class="es.spring.ioc.l06_09.DirectorEmpleado">
		<constructor-arg ref="injectReport"></constructor-arg>
	</bean>
	<!-- CREACIÓN DE LA DEPENDENCIA MEDIANTE SETTER-->
	<bean id="secEmp" class="es.spring.ioc.l06_09.SecretarioEmpleado">
		<property name="informeNuevo" ref="injectReport"/>
		<!-- 11. INYECCIÓN DE CAMPOS-->
		<property name="email" ref="injectReport"/>
		<property name="nombreEmpresa" ref="injectReport"/>
	</bean>
	
	

</beans>